    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/AdventOfCode.Interface/bin/Debug/net7.0/AdventOfCode.Interface.dll",
            "args": [
                "day",
                "test",
                "12",
                "a"
            ],
            "cwd": "${workspaceFolder}/src/AdventOfCode.Interface",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}